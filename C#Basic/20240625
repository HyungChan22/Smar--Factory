namespace ConsoleApp5
{
    internal class Program
    {
        static void Main(string[] args)
        {
            // 3+5를 변수를 이용하여 결과를 출력해보세요.
            int value1 = 3;
            int value2 = 5;
            
            int result = value1 + value2;
            Console.WriteLine(result);
        }
    }
}

// 500-300을 변수를 이용하여 결과 출력
            int value1 = 500;
            int value2 = 300;
            int result = value1 - value2;

            Console.WriteLine(result);

Console.Write("숫자를 입력해주세요.");
int a = int.Parse(Console.ReadLine());
Console.WriteLine(a);

//1. 변수선언 및 입력부
Console.Write("가로값을 입력해주세요.");
int width = int.Parse(Console.ReadLine());
Console.Write("높이값을 입력해주세요.");
int heightt = int.Parse(Console.ReadLine());

//2. 알고리즘 수식
int result = width * heightt; //수식
//3. 출력부
Console.WriteLine($"넓이는 {result} 입니다.");



//1. 변수선언 및 입력부
Console.WriteLine("가로값을 입력해주세요");
double width = int.Parse(Console.ReadLine());
Console.WriteLine("높이값을 입력해주세요");
double height = int.Parse(Console.ReadLine());

//2. 알고리즘 수식
double result = width * height / 2;

//3. 출력부
Console.WriteLine($"넓이는 {result} 입니다.");
